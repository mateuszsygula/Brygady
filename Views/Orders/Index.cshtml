@model IEnumerable<Brygady2.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h2>Zamówienia</h2>

<p>
    <a asp-action="Create">Dodaj nowe zamówienie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealizationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryTown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Work)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealizationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTown)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Work.TypeWork)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrder">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrder">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrder">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
